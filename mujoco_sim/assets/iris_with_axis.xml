<mujoco model="6dof_arm_with_joint_axes">
    <compiler angle="degree" meshdir="meshes/" autolimits="true"/>

    <option gravity="0 0 -9.81" timestep="0.001">
        <flag contact="enable" energy="enable"/>
    </option>

    <asset>
        <mesh name="base_mesh" file="base_link_factor_0.001.stl"/>
        <mesh name="shoulder_mesh" file="shoulder_factor_0.001.stl"/>
        <mesh name="arm_link1_mesh" file="arm_link1_factor_0.001.stl"/>
        <mesh name="elbow_mesh" file="elbow_factor_0.001.stl"/>
        <mesh name="arm_link2_mesh" file="arm_link2_factor_0.001.stl"/>
        <mesh name="wrist1_mesh" file="wrist1_factor_0.001.stl"/>
        <mesh name="wrist2_mesh" file="wrist2_factor_0.001.stl"/>
        <mesh name="ee_mount_mesh" file="ee_mount_factor_0.001.stl"/>
        
        <material name="aluminum" rgba="0.8 0.8 0.82 1"/>
        <material name="carbon" rgba="0.15 0.15 0.15 1"/>
        
        <material name="axis_red" rgba="1 0 0 1"/>
        <material name="axis_green" rgba="0 1 0 1"/>
        <material name="axis_blue" rgba="0 0 1 1"/>
        
        <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="512"/>
        <texture name="grid" type="2d" builtin="checker" rgb1=".1 .2 .3" rgb2=".2 .3 .4" width="300" height="300" mark="edge" markrgb=".2 .3 .4"/>
        <material name="grid" texture="grid" texrepeat="10 10" texuniform="true"/>
    </asset>

    <default>
        <default class="visual_axis">
            <geom contype="0" conaffinity="0" group="1" size="0.005 0.05" type="cylinder"/>
        </default>
        <default class="axis_tip">
            <geom contype="0" conaffinity="0" group="1" size="0.01 0.02" type="capsule"/>
        </default>
    </default>

    <worldbody>
        <light diffuse=".8 .8 .8" pos="0 0 500" dir="0 0 -1"/>
        <geom name="floor" type="plane" size="500 500 .5" material="grid" condim="3" friction="1 0.005 0.0001" contype="2" conaffinity="1"/>

        <body name="axis_x" pos="0 0 0">
            <geom type="cylinder" size="0.01 0.25" pos="0.25 0 0" quat="0.707 0 0.707 0" material="axis_red" contype="0" conaffinity="0"/>
            <geom type="capsule" size="0.02 0.05" pos="0.5 0 0" quat="0.707 0 0.707 0" material="axis_red" contype="0" conaffinity="0"/>
        </body>

        <body name="axis_y" pos="0 0 0">
            <geom type="cylinder" size="0.01 0.25" pos="0 0.25 0" quat="0.707 0.707 0 0" material="axis_green" contype="0" conaffinity="0"/>
            <geom type="capsule" size="0.02 0.05" pos="0 0.5 0" quat="0.707 0.707 0 0" material="axis_green" contype="0" conaffinity="0"/>
        </body>

        <body name="axis_z" pos="0 0 0">
            <geom type="cylinder" size="0.01 0.25" pos="0 0 0.25" material="axis_blue" contype="0" conaffinity="0"/>
            <geom type="capsule" size="0.02 0.05" pos="0 0 0.5" material="axis_blue" contype="0" conaffinity="0"/>
        </body>


        <body name="base" pos="0 0 0">
            <geom type="mesh" mesh="base_mesh" material="aluminum" contype="1" conaffinity="2"/>
            
            <body name="shoulder" pos="0 0 0.2487"> 
                <geom class="visual_axis" pos="0.05 0 0" quat="0.707 0 0.707 0" material="axis_red"/>
                <geom class="axis_tip" pos="0.1 0 0" quat="0.707 0 0.707 0" material="axis_red"/>
                <geom class="visual_axis" pos="0 0.05 0" quat="0.707 0.707 0 0" material="axis_green"/>
                <geom class="axis_tip" pos="0 0.1 0" quat="0.707 0.707 0 0" material="axis_green"/>
                <geom class="visual_axis" pos="0 0 0.05" material="axis_blue"/>
                <geom class="axis_tip" pos="0 0 0.1" material="axis_blue"/>

                <inertial pos="0 0 0.275" mass="0.55" diaginertia="0.01 0.01 0.01"/>
                <joint name="joint1" type="hinge" axis="0 0 1" range="-180 180" damping="4.5" armature="0.01" frictionloss="0.2"/>
                <geom type="mesh" mesh="shoulder_mesh" material="carbon" contype="1" conaffinity="2"/>

                <body name="arm_link1" pos="0.0218 0 0.059" euler="0 90 180">
                    <geom class="visual_axis" pos="0.05 0 0" quat="0.707 0 0.707 0" material="axis_red"/>
                    <geom class="axis_tip" pos="0.1 0 0" quat="0.707 0 0.707 0" material="axis_red"/>
                    <geom class="visual_axis" pos="0 0.05 0" quat="0.707 0.707 0 0" material="axis_green"/>
                    <geom class="axis_tip" pos="0 0.1 0" quat="0.707 0.707 0 0" material="axis_green"/>
                    <geom class="visual_axis" pos="0 0 0.05" material="axis_blue"/>
                    <geom class="axis_tip" pos="0 0 0.1" material="axis_blue"/>

                    <inertial pos="0.2 0 0.4" mass="0.55" diaginertia="0.01 0.01 0.01"/>
                    <joint name="joint2" type="hinge" axis="0 0 1" range="-170 170" damping="4.5" armature="0.01" frictionloss="0.2"/>
                    <geom type="mesh" mesh="arm_link1_mesh" material="aluminum" contype="1" conaffinity="2"/>

                    <body name="elbow" pos="0.299774 0 -0.0218">
                        <geom class="visual_axis" pos="0.05 0 0" quat="0.707 0 0.707 0" material="axis_red"/>
                        <geom class="axis_tip" pos="0.1 0 0" quat="0.707 0 0.707 0" material="axis_red"/>
                        <geom class="visual_axis" pos="0 0.05 0" quat="0.707 0.707 0 0" material="axis_green"/>
                        <geom class="axis_tip" pos="0 0.1 0" quat="0.707 0.707 0 0" material="axis_green"/>
                        <geom class="visual_axis" pos="0 0 0.05" material="axis_blue"/>
                        <geom class="axis_tip" pos="0 0 0.1" material="axis_blue"/>

                        <inertial pos="0 0 0" mass="0.55" diaginertia="0.005 0.005 0.005"/>
                        <joint name="joint3" type="hinge" axis="0 0 1" range="-150 150" damping="2.5" armature="0.01" frictionloss="0.2"/>
                        <geom type="mesh" mesh="elbow_mesh" material="carbon" contype="1" conaffinity="2"/>

                        <body name="arm_link2" pos="0.02 0 0">
                            <geom class="visual_axis" pos="0.05 0 0" quat="0.707 0 0.707 0" material="axis_red"/>
                            <geom class="axis_tip" pos="0.1 0 0" quat="0.707 0 0.707 0" material="axis_red"/>
                            <geom class="visual_axis" pos="0 0.05 0" quat="0.707 0.707 0 0" material="axis_green"/>
                            <geom class="axis_tip" pos="0 0.1 0" quat="0.707 0.707 0 0" material="axis_green"/>
                            <geom class="visual_axis" pos="0 0 0.05" material="axis_blue"/>
                            <geom class="axis_tip" pos="0 0 0.1" material="axis_blue"/>

                            <inertial pos="0.275 0 0" mass="1.1" diaginertia="0.005 0.005 0.005"/>
                            <joint name="joint4" type="hinge" axis="1 0 0" range="-180 180" damping="2" armature="0.01" frictionloss="0.2"/>
                            <geom type="mesh" mesh="arm_link2_mesh" material="aluminum" contype="1" conaffinity="2"/>

                            <body name="wrist1" pos="0.315 -0.00624 0" euler="90 0 0">
                                <geom class="visual_axis" pos="0.05 0 0" quat="0.707 0 0.707 0" material="axis_red"/>
                                <geom class="axis_tip" pos="0.1 0 0" quat="0.707 0 0.707 0" material="axis_red"/>
                                <geom class="visual_axis" pos="0 0.05 0" quat="0.707 0.707 0 0" material="axis_green"/>
                                <geom class="axis_tip" pos="0 0.1 0" quat="0.707 0.707 0 0" material="axis_green"/>
                                <geom class="visual_axis" pos="0 0 0.05" material="axis_blue"/>
                                <geom class="axis_tip" pos="0 0 0.1" material="axis_blue"/>

                                <inertial pos="0 0 0" mass="0.02" diaginertia="0.002 0.002 0.002"/>
                                <joint name="joint5" type="hinge" axis="0 1 0" range="-100 100" damping="2" armature="0.01" frictionloss="0.2"/>
                                <geom type="mesh" mesh="wrist1_mesh" material="carbon" contype="1" conaffinity="2"/>

                                <body name="wrist2" pos="0.042824 0 0">
                                    <geom class="visual_axis" pos="0.05 0 0" quat="0.707 0 0.707 0" material="axis_red"/>
                                    <geom class="axis_tip" pos="0.1 0 0" quat="0.707 0 0.707 0" material="axis_red"/>
                                    <geom class="visual_axis" pos="0 0.05 0" quat="0.707 0.707 0 0" material="axis_green"/>
                                    <geom class="axis_tip" pos="0 0.1 0" quat="0.707 0.707 0 0" material="axis_green"/>
                                    <geom class="visual_axis" pos="0 0 0.05" material="axis_blue"/>
                                    <geom class="axis_tip" pos="0 0 0.1" material="axis_blue"/>

                                    <inertial pos="0 0 0" mass="0.01" diaginertia="0.001 0.001 0.001"/>
                                    <joint name="joint6" type="hinge" axis="1 0 0" range="-360 360" damping="2" armature="0.01" frictionloss="0.2"/>
                                    <geom type="mesh" mesh="wrist2_mesh" material="aluminum" contype="1" conaffinity="2"/>

                                    <body name="ee_mount" pos="0 0 0" euler="90 90 0">
                                        <inertial pos="0 0 0" mass="1.5" diaginertia="0.05 0.05 0.05"/>
                                        <geom type="mesh" mesh="ee_mount_mesh" material="carbon" contype="1" conaffinity="2"/>
                                    </body>
                                </body>
                            </body>
                        </body>
                    </body>
                </body>
            </body>
        </body>
    </worldbody>

    <actuator>
        <motor name="m1" joint="joint1" gear="1" ctrlrange="-23.7 23.7" ctrllimited="true"/>
        <motor name="m2" joint="joint2" gear="1" ctrlrange="-23.7 23.7" ctrllimited="true"/>
        <motor name="m3" joint="joint3" gear="1" ctrlrange="-23.7 23.7" ctrllimited="true"/>
        <motor name="m4" joint="joint4" gear="1" ctrlrange="-23.7 23.7" ctrllimited="true"/>
        <motor name="m5" joint="joint5" gear="1" ctrlrange="-23.7 23.7" ctrllimited="true"/>
        <motor name="m6" joint="joint6" gear="1" ctrlrange="-35 35" ctrllimited="true"/>
    </actuator>

    <contact>
        <exclude body1="base" body2="shoulder"/>
        <exclude body1="shoulder" body2="arm_link1"/>
        <exclude body1="arm_link1" body2="elbow"/>
        <exclude body1="elbow" body2="arm_link2"/>
        <exclude body1="arm_link2" body2="wrist1"/>
        <exclude body1="wrist1" body2="wrist2"/>
    </contact>
</mujoco>